[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[core]
  editor = nvim
  pager = bat
  excludesfile = ~/.gitignore_global
[diff]
  tool = nvimdiff
  guitool = nvimdiff
[merge]
  tool = nvimdiff
  conflictstyle = diff3
[difftool]
  prompt = false
